{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "containerGroups_matthews_ats_staging_name": {
            "defaultValue": "matthews-ats-staging",
            "type": "string"
        },
        "container1_name": {
            "defaultValue": "matts",
            "type": "string"
        },
        "container2_name": {
            "defaultValue": "neo4j",
            "type": "string"
        },
        "app_image": {
            "type": "string"
        },
        "db_image": {
            "type": "string"
        },
        "registry_password": {
            "type": "securestring"
        },
        "storage_account_key": {
            "type": "securestring"
        }
    },
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.ContainerInstance/containerGroups",
            "apiVersion": "2023-05-01",
            "name": "[parameters('containerGroups_matthews_ats_staging_name')]",
            "location": "eastus",
            "tags": {
                "app": "matts",
                "environment": "staging"
            },
            "properties": {
                "sku": "Standard",
                "containers": [
                    {
                        "name": "[parameters('container1_name')]",
                        "properties": {
                            "image": "[parameters('app_image')]",
                            "ports": [
                                {
                                    "protocol": "TCP",
                                    "port": 80
                                },
                                {
                                    "protocol": "TCP",
                                    "port": 443
                                }
                            ],
                            "environmentVariables": [],
                            "resources": {
                                "requests": {
                                    "memoryInGB": 1.5,
                                    "cpu": 1
                                }
                            },
                            "volumeMounts": [
                                {
                                    "name": "apphttps",
                                    "mountPath": "/app/https"
                                }
                            ]
                        }
                    },
                    {
                        "name": "[parameters('container2_name')]",
                        "properties": {
                            "image": "[parameters('db_image')]",
                            "ports": [
                                {
                                    "protocol": "TCP",
                                    "port": 7687
                                },
                                {
                                    "protocol": "TCP",
                                    "port": 7474
                                }
                            ],
                            "environmentVariables": [],
                            "resources": {
                                "requests": {
                                    "memoryInGB": 1.5,
                                    "cpu": 1
                                }
                            },
                            "securityContext": {
                                "allowPrivilegeEscalation": true
                            },
                            "volumeMounts": [
                                {
                                    "name": "neo4jlogs",
                                    "mountPath": "/database/logs"
                                },
                                {
                                    "name": "neo4jdata",
                                    "mountPath": "/database/data"
                                }
                            ]
                        }
                    }
                ],
                "initContainers": [],
                "imageRegistryCredentials": [
                    {
                        "server": "ghcr.io",
                        "username": "m-flak",
                        "password": "[parameters('registry_password')]"
                    }
                ],
                "restartPolicy": "OnFailure",
                "ipAddress": {
                    "ports": [
                        {
                            "protocol": "TCP",
                            "port": 80
                        },
                        {
                            "protocol": "TCP",
                            "port": 443
                        }
                    ],
                    "type": "Public",
                    "dnsNameLabel": "[parameters('containerGroups_matthews_ats_staging_name')]",
                    "autoGeneratedDomainNameLabelScope": "TenantReuse"
                },
                "osType": "Linux",
                "volumes": [
                    {
                        "name": "neo4jlogs",
                        "azureFile": {
                            "shareName": "appdata",
                            "storageAccountName": "matthewsatsdata",
                            "storageAccountKey": "[parameters('storage_account_key')]"
                        }
                    },
                    {
                        "name": "neo4jdata",
                        "azureFile": {
                            "shareName": "appdata",
                            "storageAccountName": "matthewsatsdata",
                            "storageAccountKey": "[parameters('storage_account_key')]"
                        }
                    },
                    {
                        "name": "apphttps",
                        "azureFile": {
                            "shareName": "appdata",
                            "storageAccountName": "matthewsatsdata",
                            "storageAccountKey": "[parameters('storage_account_key')]"
                        }
                    }
                ]
            }
        }
    ]
}